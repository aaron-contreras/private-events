<h1 class="title has-text-centered">Join us</h1>

<%= render partial: "shared/error_messages", locals: { object: @user } %>

<%= form_with model: @user do |f| %>
  <div class="field">
    <%= f.label :name, class: 'label' %>
    <div class="control">
      <%= f.text_field :name, class: 'input', placeholder: 'John Doe' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :username, class: 'label' %>
    <div class="control">
      <%= f.text_field :username, class: 'input', placeholder: 'johndoe123' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit 'Sign up', class: 'button is-info' %>
    </div>
  </div>
<% end %>
